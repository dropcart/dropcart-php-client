{
  "name": "dropcart/php-client",
  "description": "Use this package to communicate with the Dropcart engine on a PHP server.",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^7.4",
    "guzzlehttp/guzzle": "^7.0",
    "lcobucci/jwt": "^3.2"
  },
  "require-dev": {
    "ext-zip": "*",
    "phpunit/phpunit" : "^9.5"
  },
  "autoload": {
    "psr-4" : {
      "Dropcart\\PhpClient\\" : "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Dropcart\\PhpClient\\Tests\\Unit\\": "tests/unit/"
    }
  },
  "config": {

  },
  "authors": [
    {
      "name": "Jason de Ridder",
      "email": "jason@inktweb.nl"
    },
    {
      "name": "Tom Kriek",
      "email": "tom@inktweb.nl"
    }
  ],
  "scripts": {
    "build-phar": "@php --define phar.readonly=0 build-phar.php --force",
    "build-zip": "@php build-zip.php --force"
  }
}
